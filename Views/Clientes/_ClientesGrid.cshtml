@using AutoGestao.Models
@model ClientesIndexViewModel

<div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
    <table class="table table-hover mb-0" id="clientesTable">
        <thead class="table-dark sticky-top">
            <tr>
                <th style="cursor: pointer;" onclick="sortColumn('Nome')">
                    <div class="d-flex align-items-center">
                        Cliente
                        <i class="fas fa-sort ms-1 @(Model.OrderBy == "Nome" ? (Model.OrderDirection == "asc" ? "fa-sort-up" : "fa-sort-down") : "")"></i>
                    </div>
                </th>
                <th style="width: 150px; cursor: pointer;" onclick="sortColumn('Tipo')">
                    <div class="d-flex align-items-center">
                        Tipo
                        <i class="fas fa-sort ms-1 @(Model.OrderBy == "Tipo" ? (Model.OrderDirection == "asc" ? "fa-sort-up" : "fa-sort-down") : "")"></i>
                    </div>
                </th>
                <th style="width: 180px; cursor: pointer;" onclick="sortColumn('Documento')">
                    <div class="d-flex align-items-center">
                        Documento
                        <i class="fas fa-sort ms-1 @(Model.OrderBy == "Documento" ? (Model.OrderDirection == "asc" ? "fa-sort-up" : "fa-sort-down") : "")"></i>
                    </div>
                </th>
                <th style="width: 200px;">Contato</th>
                <th style="width: 150px; cursor: pointer;" onclick="sortColumn('Cidade')">
                    <div class="d-flex align-items-center">
                        Localiza√ß√£o
                        <i class="fas fa-sort ms-1 @(Model.OrderBy == "Cidade" ? (Model.OrderDirection == "asc" ? "fa-sort-up" : "fa-sort-down") : "")"></i>
                    </div>
                </th>
                <th style="width: 100px;">Status</th>
                <th style="width: 130px; cursor: pointer;" onclick="sortColumn('DataCadastro')">
                    <div class="d-flex align-items-center">
                        Cadastro
                        <i class="fas fa-sort ms-1 @(Model.OrderBy == "DataCadastro" ? (Model.OrderDirection == "asc" ? "fa-sort-up" : "fa-sort-down") : "")"></i>
                    </div>
                </th>
                <th style="width: 120px;">A√ß√µes</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Clientes != null && Model.Clientes.Any())
            {
                @foreach (var cliente in Model.Clientes)
                {
                    <tr class="cliente-row">
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="cliente-avatar me-3">
                                    @if (cliente.TipoCliente == "PessoaFisica")
                                    {
                                        <i class="fas fa-user fa-lg text-primary"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-building fa-lg text-warning"></i>
                                    }
                                </div>
                                <div>
                                    <div class="fw-semibold">@cliente.Nome</div>
                                    @if (!string.IsNullOrEmpty(cliente.Email))
                                    {
                                        <small class="text-muted">@cliente.Email</small>
                                    }
                                </div>
                            </div>
                        </td>
                        <td>
                            @if (cliente.TipoCliente == "PessoaFisica")
                            {
                                <span class="badge-modern badge-primary">üë§ Pessoa F√≠sica</span>
                            }
                            else
                            {
                                <span class="badge-modern badge-warning">üè¢ Pessoa Jur√≠dica</span>
                            }
                        </td>
                        <td>
                            @if (cliente.TipoCliente == "PessoaFisica")
                            {
                                <span class="fw-bold">@cliente.CPF</span>
                                @if (!string.IsNullOrEmpty(cliente.RG))
                                {
                                    <br>
                                    <small class="text-muted">RG: @cliente.RG</small>
                                }
                            }
                            else
                            {
                                <span class="fw-bold">@cliente.CNPJ</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(cliente.Telefone))
                            {
                                <div><i class="fas fa-phone me-1"></i>@cliente.Telefone</div>
                            }
                            @if (!string.IsNullOrEmpty(cliente.Celular))
                            {
                                <div><i class="fas fa-mobile me-1"></i>@cliente.Celular</div>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(cliente.Cidade))
                            {
                                <div>@cliente.Cidade/@cliente.Estado</div>
                            }
                            @if (!string.IsNullOrEmpty(cliente.CEP))
                            {
                                <small class="text-muted">CEP: @cliente.CEP</small>
                            }
                        </td>
                        <td>
                            @if (cliente.Status == "Ativo")
                            {
                                <span class="badge-modern badge-success">‚úÖ Ativo</span>
                            }
                            else
                            {
                                <span class="badge-modern badge-danger">‚ùå Inativo</span>
                            }
                        </td>
                        <td>
                            <div>@cliente.DataCadastro.ToString("dd/MM/yyyy")</div>
                            <small class="text-muted">@cliente.DataCadastro.ToString("HH:mm")</small>
                        </td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-sm btn-outline-info" title="Detalhes">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button class="btn btn-sm btn-outline-success" onclick="novaVenda(@cliente.Id)" title="Nova Venda">
                                    <i class="fas fa-handshake"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center py-5">
                        <div class="text-muted">
                            <i class="fas fa-users fa-3x mb-3"></i>
                            <p class="mb-3">Nenhum cliente encontrado com os filtros aplicados.</p>
                            <button class="btn-modern btn-outline-modern" onclick="limparFiltros()">
                                <i class="fas fa-times"></i>
                                Limpar Filtros
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
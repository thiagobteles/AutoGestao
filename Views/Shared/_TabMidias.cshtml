@using AutoGestao.Entidades.Veiculos
@model List<VeiculoFoto>

<div class="tab-midias">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>
            <i class="fas fa-images me-2"></i>
            Fotos do Veículo
        </h4>
        <button type="button" class="btn-modern btn-primary-modern" data-bs-toggle="modal" data-bs-target="#uploadFotoModal">
            <i class="fas fa-camera"></i>
            Adicionar Fotos
        </button>
    </div>

    @if (Model.Any())
    {
        <div class="row g-3">
            @foreach (var foto in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="foto-card">
                        <div class="foto-wrapper">
                            <img src="@GetFotoUrl(foto)" alt="@foto.Descricao" class="foto-thumbnail" onclick="abrirFotoModal('@GetFotoUrl(foto)', '@foto.Descricao')">
                            <div class="foto-overlay">
                                <button class="btn btn-sm btn-light" onclick="abrirFotoModal('@GetFotoUrl(foto)', '@foto.Descricao')">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" onclick="removerFoto(@foto.Id)">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                        <div class="foto-info">
                            <h6 class="foto-descricao">@foto.Descricao</h6>
                            <small class="text-muted">@foto.DataUpload.ToString("dd/MM/yyyy")</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state text-center py-5">
            <i class="fas fa-camera fa-4x text-muted mb-3"></i>
            <h5 class="text-muted">Nenhuma foto encontrada</h5>
            <p class="text-muted">Adicione fotos do veículo para melhor apresentação</p>
            <button type="button" class="btn-modern btn-primary-modern" data-bs-toggle="modal" data-bs-target="#uploadFotoModal">
                <i class="fas fa-camera"></i>
                Adicionar Primeira Foto
            </button>
        </div>
    }
</div>

<!-- Modal para upload de fotos -->
<div class="modal fade" id="uploadFotoModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-camera me-2"></i>
                    Adicionar Fotos
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="uploadFotoForm" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group-modern mb-3">
                        <label class="form-label-modern">
                            <i class="fas fa-images me-1"></i>
                            Fotos *
                        </label>
                        <input type="file" name="fotos" class="form-control-modern" multiple required accept="image/*">
                        <div class="form-text">Selecione uma ou várias fotos. Formatos: JPG, PNG, GIF</div>
                    </div>
                    <div class="form-group-modern">
                        <label class="form-label-modern">
                            <i class="fas fa-comment me-1"></i>
                            Descrição
                        </label>
                        <textarea name="descricao" class="form-control-modern" rows="2" placeholder="Descrição das fotos..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-modern btn-outline-modern" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn-modern btn-primary-modern">
                        <i class="fas fa-upload"></i>
                        Fazer Upload
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para visualizar foto -->
<div class="modal fade" id="fotoViewModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="fotoViewTitle">Visualizar Foto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <img id="fotoViewImage" src="" alt="" class="img-fluid">
            </div>
        </div>
    </div>
</div>

@functions {
    string GetFotoUrl(VeiculoFoto foto)
    {
        return $"/uploads/fotos/{foto.Id}_{foto.NomeArquivo}";
    }
}
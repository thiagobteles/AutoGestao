@model TabContentViewModel

<div class="tab-content-wrapper">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">
            <i class="@Model.Icon me-2"></i>
            @Model.Title
        </h5>
        @if (Model.CanCreate)
        {
            <button type="button" 
                    class="btn btn-primary btn-add-tab-item"
                    data-tab="@Model.TabId"
                    data-controller="@Model.ControllerName"
                    data-parent-id="@Model.ParentId"
                    data-parent-controller="@Model.ParentController">
                <i class="fas fa-plus me-2"></i>
                Adicionar
            </button>
        }
    </div>

    <div class="tab-grid-container">
        @if (Model.Items != null && Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            @foreach (var column in Model.Columns)
                            {
                                <th style="@(string.IsNullOrEmpty(column.Width) ? "" : $"width: {column.Width};")">
                                    @column.DisplayName
                                </th>
                            }
                            @if (Model.CanEdit || Model.CanDelete)
                            {
                                <th class="text-end" style="width: 120px;">Ações</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            var itemId = ((dynamic)item).Id;
                            <tr>
                                @foreach (var column in Model.Columns)
                                {
                                    <td>
                                        @{
                                            var value = column.GetValue(item);
                                            if (value != null)
                                            {
                                                @value
                                            }
                                        }
                                    </td>
                                }
                                @if (Model.CanEdit || Model.CanDelete)
                                {
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            @if (Model.CanEdit)
                                            {
                                                <button type="button"
                                                        class="btn btn-outline-primary btn-edit-tab-item"
                                                        data-id="@itemId"
                                                        data-controller="@Model.ControllerName"
                                                        data-parent-id="@Model.ParentId"
                                                        data-parent-controller="@Model.ParentController"
                                                        title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                            }
                                            @if (Model.CanDelete)
                                            {
                                                <button type="button"
                                                        class="btn btn-outline-danger btn-delete-tab-item"
                                                        data-id="@itemId"
                                                        data-controller="@Model.ControllerName"
                                                        title="Excluir">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state text-center py-5">
                <i class="@Model.Icon fa-3x text-muted mb-3"></i>
                <h6 class="text-muted">Nenhum registro encontrado</h6>
                @if (Model.CanCreate)
                {
                    <p class="text-muted small">Clique em "Adicionar" para criar um novo registro</p>
                }
            </div>
        }
    </div>
</div>
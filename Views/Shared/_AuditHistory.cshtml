@model (string EntidadeNome, string EntidadeId)
@{
    var logs = ViewBag.AuditLogs as List<AutoGestao.Entidades.AuditLog> ?? new List<AutoGestao.Entidades.AuditLog>();
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0">
            <i class="fas fa-history me-2"></i>
            Histórico de Alterações
        </h6>
        <small class="text-muted">@logs.Count registros</small>
    </div>
    <div class="card-body p-0">
        @if (logs.Any())
        {
            <div class="timeline">
                @foreach (var log in logs.Take(10))
                {
                    <div class="timeline-item">
                        <div class="timeline-marker">
                            @{
                                var icon = log.TipoOperacao switch
                                {
                                    AutoGestao.Enumerador.Gerais.EnumTipoOperacaoAuditoria.Create => "fa-plus text-success",
                                    AutoGestao.Enumerador.Gerais.EnumTipoOperacaoAuditoria.Update => "fa-edit text-warning",
                                    AutoGestao.Enumerador.Gerais.EnumTipoOperacaoAuditoria.Delete => "fa-trash text-danger",
                                    _ => "fa-info-circle text-info"
                                };
                            }
                            <i class="fas @icon"></i>
                        </div>
                        <div class="timeline-content">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <strong>@log.TipoOperacao</strong>
                                    @if (!string.IsNullOrEmpty(log.CamposAlterados))
                                    {
                                        <br>
                                        <small class="text-muted">Campos: @log.CamposAlterados</small>
                                    }
                                </div>
                                <small class="text-muted">
                                    @log.DataHora.ToString("dd/MM HH:mm")
                                </small>
                            </div>
                            <div class="mt-1">
                                <small>
                                    <i class="fas fa-user me-1"></i>
                                    @log.UsuarioNome
                                </small>
                                @if (log.IpCliente != null)
                                {
                                    <small class="ms-2">
                                        <i class="fas fa-globe me-1"></i>
                                        @log.IpCliente
                                    </small>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
            @if (logs.Count > 10)
            {
                <div class="text-center p-3">
                    <a href="@Url.Action("Index", "Audit", new { entidade = Model.EntidadeNome, entidadeId = Model.EntidadeId })"
                       class="btn btn-sm btn-outline-primary">
                        Ver todos os @logs.Count registros
                    </a>
                </div>
            }
        }
        else
        {
            <div class="text-center py-4 text-muted">
                <i class="fas fa-history fa-2x mb-2"></i>
                <p class="mb-0">Nenhum histórico de alterações encontrado</p>
            </div>
        }
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding: 1rem 0;
    }

    .timeline-item {
        position: relative;
        display: flex;
        margin-bottom: 1.5rem;
        padding-left: 2rem;
    }

        .timeline-item:not(:last-child)::before {
            content: '';
            position: absolute;
            left: 0.75rem;
            top: 2rem;
            width: 2px;
            height: calc(100% + 0.5rem);
            background: #dee2e6;
        }

    .timeline-marker {
        position: absolute;
        left: 0;
        top: 0.25rem;
        width: 1.5rem;
        height: 1.5rem;
        background: white;
        border: 2px solid #dee2e6;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
    }

    .timeline-content {
        flex: 1;
        background: #f8f9fa;
        padding: 0.75rem;
        border-radius: 0.375rem;
        border-left: 3px solid #dee2e6;
    }
</style>
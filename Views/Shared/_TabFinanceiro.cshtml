@using AutoGestao.Entidades
@using AutoGestao.Entidades.Veiculos
@using AutoGestao.Enumerador
@model List<Despesa>

<div class="tab-financeiro">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>
            <i class="fas fa-dollar-sign me-2"></i>
            Despesas do Veículo
        </h4>
        <button type="button" class="btn-modern btn-primary-modern" data-bs-toggle="modal" data-bs-target="#novaDespesaModal">
            <i class="fas fa-plus"></i>
            Nova Despesa
        </button>
    </div>

    <!-- Resumo financeiro -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="stats-card bg-primary">
                <div class="stats-icon">
                    <i class="fas fa-money-bill-wave"></i>
                </div>
                <div class="stats-content">
                    <h3>@Model.Sum(d => d.Valor).ToString("C2")</h3>
                    <p>Total de Despesas</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card bg-warning">
                <div class="stats-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stats-content">
                    <h3>@Model.Count(d => d.Status == EnumStatusDespesa.Pendente)</h3>
                    <p>Despesas Pendentes</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card bg-success">
                <div class="stats-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stats-content">
                    <h3>@Model.Count(d => d.Status == EnumStatusDespesa.Pago)</h3>
                    <p>Despesas Pagas</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de despesas -->
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-modern">
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Descrição</th>
                        <th>Fornecedor</th>
                        <th>Valor</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var despesa in Model.OrderByDescending(d => d.DataDespesa))
                    {
                        <tr>
                            <td>@despesa.DataDespesa.ToString("dd/MM/yyyy")</td>
                            <td>@despesa.Descricao</td>
                            <td>@despesa.Fornecedor?.Nome</td>
                            <td>@despesa.Valor.ToString("C2")</td>
                            <td>
                                <span class="badge badge-@GetStatusClass(despesa.Status)">
                                    @despesa.Status.ToString()
                                </span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-primary" onclick="editarDespesa(@despesa.Id)">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" onclick="removerDespesa(@despesa.Id)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state text-center py-5">
            <i class="fas fa-receipt fa-4x text-muted mb-3"></i>
            <h5 class="text-muted">Nenhuma despesa encontrada</h5>
            <p class="text-muted">Registre as despesas relacionadas a este veículo</p>
            <button type="button" class="btn-modern btn-primary-modern" data-bs-toggle="modal" data-bs-target="#novaDespesaModal">
                <i class="fas fa-plus"></i>
                Registrar Primeira Despesa
            </button>
        </div>
    }
</div>

<!-- Modal para nova despesa -->
<div class="modal fade" id="novaDespesaModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-plus me-2"></i>
                    Nova Despesa
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="novaDespesaForm">
                <div class="modal-body">
                    <div class="form-group-modern mb-3">
                        <label class="form-label-modern">
                            <i class="fas fa-building me-1"></i>
                            Fornecedor *
                        </label>
                        <select name="IdFornecedor" class="form-select-modern" required>
                            <option value="">Selecione o fornecedor...</option>
                            <!-- Carregar fornecedores via AJAX -->
                        </select>
                    </div>
                    <div class="form-group-modern mb-3">
                        <label class="form-label-modern">
                            <i class="fas fa-align-left me-1"></i>
                            Descrição *
                        </label>
                        <input type="text" name="descricao" class="form-control-modern" required placeholder="Descrição da despesa">
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group-modern mb-3">
                                <label class="form-label-modern">
                                    <i class="fas fa-dollar-sign me-1"></i>
                                    Valor *
                                </label>
                                <input type="text" name="valor" class="form-control-modern currency-mask" required placeholder="R$ 0,00">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group-modern mb-3">
                                <label class="form-label-modern">
                                    <i class="fas fa-calendar me-1"></i>
                                    Data *
                                </label>
                                <input type="date" name="dataDespesa" class="form-control-modern" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-modern btn-outline-modern" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn-modern btn-primary-modern">
                        <i class="fas fa-save"></i>
                        Salvar Despesa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@functions {
    string GetStatusClass(EnumStatusDespesa status)
    {
        return status switch
        {
            EnumStatusDespesa.Pendente => "warning",
            EnumStatusDespesa.Pago => "success",
            EnumStatusDespesa.Cancelado => "danger",
            _ => "secondary"
        };
    }
}
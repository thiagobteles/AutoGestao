    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('sidebar');
            const sidebarCollapseBtn = document.getElementById('sidebarCollapseBtn');
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebarOverlay = document.getElementById('sidebarOverlay');

            // Vari√°vel para controlar se estamos processando um clique
            let isProcessingClick = false;

            // Recuperar estado salvo do localStorage
            const savedCollapsedState = localStorage.getItem('sidebarCollapsed') === 'true';
            if (savedCollapsedState) {
                sidebar.classList.add('collapsed');
                updateCollapseIcon(true);
            }

            // CORRE√á√ÉO: Bot√£o de colapsar/expandir com debounce
            sidebarCollapseBtn.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                e.stopImmediatePropagation();

                // Prevenir cliques m√∫ltiplos
                if (isProcessingClick) return;
                isProcessingClick = true;

                const isCollapsed = sidebar.classList.contains('collapsed');

                if (isCollapsed) {
                    sidebar.classList.remove('collapsed');
                    localStorage.setItem('sidebarCollapsed', 'false');
                    updateCollapseIcon(false);
                } else {
                    sidebar.classList.add('collapsed');
                    localStorage.setItem('sidebarCollapsed', 'true');
                    updateCollapseIcon(true);
                }

                // Liberar ap√≥s a transi√ß√£o
                setTimeout(() => {
                    isProcessingClick = false;
                }, 400);
            });

            // CORRE√á√ÉO: Toggle sidebar para mobile
            sidebarToggle.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                e.stopImmediatePropagation();

                if (window.innerWidth <= 1024) {
                    sidebar.classList.toggle('open');
                    sidebarOverlay.classList.toggle('show');
                }
            });

            // Fechar sidebar ao clicar no overlay (mobile)
            sidebarOverlay.addEventListener('click', function() {
                sidebar.classList.remove('open');
                sidebarOverlay.classList.remove('show');
            });

            // CORRE√á√ÉO PRINCIPAL: Prevenir propaga√ß√£o de eventos nos links do menu
            document.querySelectorAll('.menu-link').forEach(link => {
                // Remover qualquer listener anterior
                link.removeEventListener('click', handleMenuClick);

                // Adicionar novo listener controlado
                link.addEventListener('click', handleMenuClick, true);
            });

            function handleMenuClick(e) {
                // Se estivermos processando um clique do bot√£o collapse, ignore
                if (isProcessingClick) {
                    e.preventDefault();
                    e.stopPropagation();
                    e.stopImmediatePropagation();
                    return false;
                }

                // Para navega√ß√£o normal, apenas pare a propaga√ß√£o (n√£o previna a navega√ß√£o)
                e.stopPropagation();
                e.stopImmediatePropagation();

                // Permitir navega√ß√£o normal
                return true;
            }

            // CORRE√á√ÉO: Prevenir propaga√ß√£o em toda a √°rea do sidebar no modo colapsado
            sidebar.addEventListener('click', function(e) {
                if (sidebar.classList.contains('collapsed')) {
                    // Se o clique foi no bot√£o de collapse, deixar passar
                    if (e.target === sidebarCollapseBtn || sidebarCollapseBtn.contains(e.target)) {
                        return;
                    }

                    // Se o clique foi em um link de menu, permitir navega√ß√£o mas parar propaga√ß√£o
                    const menuLink = e.target.closest('.menu-link');
                    if (menuLink) {
                        e.stopPropagation();
                        return;
                    }

                    // Para outros cliques, parar propaga√ß√£o
                    e.stopPropagation();
                }
            });

            // Fun√ß√£o para atualizar o √≠cone do bot√£o de colapsar
            function updateCollapseIcon(isCollapsed) {
                const icon = sidebarCollapseBtn.querySelector('i');
                if (isCollapsed) {
                    icon.className = 'fas fa-chevron-right';
                    sidebarCollapseBtn.title = 'Expandir Menu';
                } else {
                    icon.className = 'fas fa-chevron-left';
                    sidebarCollapseBtn.title = 'Recolher Menu';
                }
            }

            // Marcar item ativo no menu
            const currentPath = window.location.pathname;
            const menuLinks = document.querySelectorAll('.menu-link');

            menuLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });

            // Redimensionamento da janela
            window.addEventListener('resize', function() {
                if (window.innerWidth > 1024) {
                    sidebar.classList.remove('open');
                    sidebarOverlay.classList.remove('show');
                } else {
                    if (sidebar.classList.contains('open')) {
                        sidebar.classList.remove('collapsed');
                    }
                }
            });

            // CORRE√á√ÉO: Detectar tecla de atalho com debounce
            let keyProcessing = false;
            document.addEventListener('keydown', function(e) {
                if ((e.ctrlKey || e.metaKey) && e.key === 'b') {
                    e.preventDefault();

                    if (keyProcessing) return;
                    keyProcessing = true;

                    if (window.innerWidth > 1024) {
                        sidebarCollapseBtn.click();
                    }

                    setTimeout(() => {
                        keyProcessing = false;
                    }, 400);
                }
            });

            // Debug: Mostrar largura dispon√≠vel no console
            function logAvailableWidth() {
                const isCollapsed = sidebar.classList.contains('collapsed');
                const sidebarWidth = isCollapsed ? 80 : 280;
                const availableWidth = window.innerWidth - sidebarWidth;
                console.log(`üñ•Ô∏è Largura total: ${window.innerWidth}px | Sidebar: ${sidebarWidth}px | Dispon√≠vel: ${availableWidth}px`);
            }

            logAvailableWidth();
            let resizeTimeout;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimeout);
                resizeTimeout = setTimeout(logAvailableWidth, 300);
            });

            // ADICIONAL: Desabilitar transi√ß√µes durante redimensionamento
            let resizeTimer;
            window.addEventListener('resize', function() {
                document.body.classList.add('resize-in-progress');
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(function() {
                    document.body.classList.remove('resize-in-progress');
                }, 400);
            });
        });

        // Sistema de Notifica√ß√µes Toast (mantido igual)
        function showToast(message, type = 'info', duration = 5000) {
            const container = getToastContainer();

            const toast = document.createElement('div');
            toast.className = 'toast-modern';

            const iconMap = {
                success: 'fas fa-check',
                error: 'fas fa-times',
                warning: 'fas fa-exclamation',
                info: 'fas fa-info'
            };

            const titleMap = {
                success: 'Sucesso',
                error: 'Erro',
                warning: 'Aten√ß√£o',
                info: 'Informa√ß√£o'
            };

            toast.innerHTML = `
                <div class="toast-header-modern">
                    <div class="toast-icon ${type}">
                        <i class="${iconMap[type]}"></i>
                    </div>
                    <div class="toast-title">${titleMap[type]}</div>
                    <button class="toast-close" onclick="hideToast(this.closest('.toast-modern'))">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="toast-body-modern">${message}</div>
                <div class="toast-progress">
                    <div class="toast-progress-bar"></div>
                </div>
            `;

            container.appendChild(toast);
            setTimeout(() => toast.classList.add('show'), 100);
            setTimeout(() => hideToast(toast), duration);
        }

        function getToastContainer() {
            let container = document.querySelector('.toast-container');
            if (!container) {
                container = document.createElement('div');
                container.className = 'toast-container';
                document.body.appendChild(container);
            }
            return container;
        }

        function hideToast(toast) {
            toast.classList.add('hide');
            setTimeout(() => {
                if (toast.parentNode) {
                    toast.parentNode.removeChild(toast);
                }
            }, 400);
        }

        // Sistema de Modo Escuro (mantido igual)
        function initThemeToggle() {
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', savedTheme);

            if (!document.querySelector('.theme-toggle')) {
                const themeButton = document.createElement('button');
                themeButton.className = 'theme-toggle';
                themeButton.innerHTML = '<i class="fas fa-moon"></i>';
                themeButton.title = 'Alternar modo escuro';
                themeButton.onclick = toggleTheme;

                const topbarRight = document.querySelector('.topbar-right');
                if (topbarRight) {
                    topbarRight.insertBefore(themeButton, topbarRight.firstChild);
                }
            }

            updateThemeIcon();
        }

        function toggleTheme() {
            const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';

            document.documentElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeIcon();

            showToast(`Modo ${newTheme === 'dark' ? 'escuro' : 'claro'} ativado!`, 'info', 2000);
        }

        function updateThemeIcon() {
            const themeButton = document.querySelector('.theme-toggle i');
            const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';

            if (themeButton) {
                themeButton.className = currentTheme === 'light' ? 'fas fa-moon' : 'fas fa-sun';
            }
        }

        // Inicializar
        document.addEventListener('DOMContentLoaded', function() {
            initThemeToggle();

            setTimeout(() => {
                if (window.innerWidth > 1024 && !localStorage.getItem('sidebarTipShown')) {
                    localStorage.setItem('sidebarTipShown', 'true');
                }
            }, 2000);
        });

        // Anima√ß√µes de entrada em elementos
        function observeElements() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('slide-in-up');
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('.card-modern').forEach(card => {
                observer.observe(card);
            });
        }

                // ===================================================================
        // OTIMIZA√á√ÉO AUTOM√ÅTICA DO LAYOUT
        // Adicione este script no final da p√°gina ou em um arquivo separado
        // ===================================================================

        document.addEventListener('DOMContentLoaded', function() {

            // ===================================================================
            // FUN√á√ÉO PARA OTIMIZAR ALTURA DA TABELA
            // ===================================================================
            function optimizeTableHeight() {
                const tableContainer = document.querySelector('.table-responsive');
                if (!tableContainer) return;

                // Calcular altura dispon√≠vel
                const windowHeight = window.innerHeight;
                const topbarHeight = document.querySelector('.topbar')?.offsetHeight || 60;
                const headerHeight = document.querySelector('.dashboard-container > .d-flex:first-child')?.offsetHeight || 80;
                const filtersHeight = document.querySelector('.card-modern:has([id*="filtro"])')?.offsetHeight || 120;
                const listHeaderHeight = document.querySelector('.card-header-modern')?.offsetHeight || 50;
                const paginationHeight = document.querySelector('.pagination')?.parentElement?.offsetHeight || 60;
                const padding = 40; // Padding extra para respirar

                const availableHeight = windowHeight - topbarHeight - headerHeight - filtersHeight - listHeaderHeight - paginationHeight - padding;

                // Aplicar altura otimizada
                const minHeight = Math.max(300, Math.min(availableHeight, 600));
                tableContainer.style.maxHeight = `${availableHeight}px`;
                tableContainer.style.minHeight = `${minHeight}px`;

                console.log(`üìä Altura da tabela otimizada: ${availableHeight}px (min: ${minHeight}px)`);
            }

            // ===================================================================
            // FUN√á√ÉO PARA COMPACTAR CABE√áALHO
            // ===================================================================
            function compactHeader() {
                const headerContainer = document.querySelector('.dashboard-container > .d-flex:first-child');
                if (!headerContainer) return;

                // Adicionar classe para controle
                headerContainer.classList.add('header-optimized');

                // Otimizar bot√µes
                const buttons = headerContainer.querySelectorAll('.btn-modern');
                buttons.forEach(btn => {
                    btn.classList.add('btn-compact');
                });

                console.log('üéØ Cabe√ßalho otimizado');
            }

            // ===================================================================
            // FUN√á√ÉO PARA OTIMIZAR CARDS DE FILTROS
            // ===================================================================
            function optimizeFilters() {
                const filterCards = document.querySelectorAll('.card-modern');
                filterCards.forEach(card => {
                    const header = card.querySelector('.card-header-modern');
                    if (header && header.textContent.includes('Filtros')) {
                        card.classList.add('filter-compact');

                        // Tornar colaps√°vel se n√£o for
                        if (!header.hasAttribute('data-bs-toggle')) {
                            header.style.cursor = 'pointer';
                            header.addEventListener('click', function() {
                                const body = card.querySelector('.card-body-modern');
                                if (body) {
                                    body.style.display = body.style.display === 'none' ? 'block' : 'none';
                                    header.classList.toggle('collapsed');
                                }
                            });
                        }
                    }
                });

                console.log('üîß Filtros otimizados');
            }

            // ===================================================================
            // FUN√á√ÉO PARA MONITORAR MUDAN√áAS DE LAYOUT
            // ===================================================================
            function setupLayoutMonitoring() {
                // Observer para mudan√ßas no DOM
                const observer = new MutationObserver(function(mutations) {
                    mutations.forEach(function(mutation) {
                        if (mutation.type === 'childList' && mutation.addedNodes.length > 0) {
                            // Re-otimizar quando conte√∫do mudar
                            setTimeout(() => {
                                optimizeTableHeight();
                            }, 100);
                        }
                    });
                });

                // Observar mudan√ßas no container da grid
                const gridContainer = document.getElementById('gridContainer');
                if (gridContainer) {
                    observer.observe(gridContainer, {
                        childList: true,
                        subtree: true
                    });
                }

                console.log('üëÅÔ∏è Monitoramento de layout ativo');
            }

            // ===================================================================
            // FUN√á√ÉO PARA REDIMENSIONAMENTO RESPONSIVO
            // ===================================================================
            let resizeTimeout;
            function handleResize() {
                clearTimeout(resizeTimeout);
                resizeTimeout = setTimeout(() => {
                    optimizeTableHeight();

                    // Adicionar classe de redimensionamento
                    document.body.classList.add('resizing');
                    setTimeout(() => {
                        document.body.classList.remove('resizing');
                    }, 300);

                }, 150);
            }

            // ===================================================================
            // FUN√á√ÉO PARA DETECTAR SIDEBAR COLAPSADO
            // ===================================================================
            function handleSidebarChange() {
                const sidebar = document.getElementById('sidebar');
                if (!sidebar) return;

                const observer = new MutationObserver(function(mutations) {
                    mutations.forEach(function(mutation) {
                        if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
                            setTimeout(() => {
                                optimizeTableHeight();
                                console.log('üì± Layout ajustado para mudan√ßa do sidebar');
                            }, 350); // Aguardar transi√ß√£o
                        }
                    });
                });

                observer.observe(sidebar, {
                    attributes: true,
                    attributeFilter: ['class']
                });
            }

            // ===================================================================
            // INICIALIZA√á√ÉO
            // ===================================================================
            function initLayoutOptimizer() {
                // Aplicar otimiza√ß√µes iniciais
                compactHeader();
                optimizeFilters();

                // Aguardar renderiza√ß√£o completa
                setTimeout(() => {
                    optimizeTableHeight();
                }, 100);

                // Configurar monitoramento
                setupLayoutMonitoring();
                handleSidebarChange();

                // Configurar redimensionamento
                window.addEventListener('resize', handleResize);

                // Otimizar ap√≥s carregamento completo
                window.addEventListener('load', () => {
                    setTimeout(optimizeTableHeight, 200);
                });
            }

            window.forceOptimize = function() {
                optimizeTableHeight();
            };

            // Inicializar
            initLayoutOptimizer();
        });

        // ===================================================================
        // CSS ADICIONAL VIA JAVASCRIPT
        // ===================================================================
        const additionalCSS = `
        /* Estilos aplicados via JavaScript */
        .header-optimized {
            margin-bottom: 1rem !important;
            padding: 0.75rem 0 !important;
        }

        .btn-compact {
            padding: 0.5rem 1rem !important;
            font-size: 0.875rem !important;
        }

        .filter-compact .card-header-modern {
            padding: 0.875rem 1.25rem !important;
        }

        .filter-compact .card-body-modern {
            padding: 1rem 1.25rem !important;
        }

        .resizing * {
            transition: none !important;
        }

        /* Melhorar scroll da tabela */
        .table-responsive {
            scroll-behavior: smooth;
        }

        .table-responsive::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        .table-responsive::-webkit-scrollbar-track {
            background: #f1f5f9;
            border-radius: 4px;
        }

        .table-responsive::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 4px;
        }

        .table-responsive::-webkit-scrollbar-thumb:hover {
            background: #94a3b8;
        }
        `;

        // Aplicar CSS adicional
        const styleSheet = document.createElement('style');
        styleSheet.textContent = additionalCSS;
        document.head.appendChild(styleSheet);



                // ===================================================================
        // CORRE√á√ÉO DEFINITIVA - SISTEMA DE MENU ATIVO
        // Substitua todo o JavaScript anterior por este
        // ===================================================================

        document.addEventListener('DOMContentLoaded', function() {

            // ===================================================================
            // SISTEMA DE DETEC√á√ÉO DE MENU ATIVO CORRIGIDO
            // ===================================================================
            function setCorrectActiveMenu() {
                const currentPath = window.location.pathname.toLowerCase().trim();
                const menuLinks = document.querySelectorAll('.sidebar .menu-link');

                console.log('üîç URL detectada:', currentPath);

                // PRIMEIRO: Remover TODAS as classes active
                menuLinks.forEach(link => {
                    link.classList.remove('active');
                });

                // SEGUNDO: Detectar o menu correto baseado na URL
                let menuFound = false;

                // Mapeamento exato de URLs
                const exactMatches = {
                    '/': 'Dashboard',
                    '/home': 'Dashboard',
                    '/home/index': 'Dashboard',
                    '/veiculos': 'Ve√≠culos',
                    '/veiculos/index': 'Ve√≠culos',
                    '/clientes': 'Clientes',
                    '/clientes/index': 'Clientes',
                    '/vendedores': 'Vendedores',
                    '/vendedores/index': 'Vendedores',
                    '/vendas': 'Vendas',
                    '/vendas/index': 'Vendas'
                };

                // Tentar correspond√™ncia exata primeiro
                for (const [url, menuName] of Object.entries(exactMatches)) {
                    if (currentPath === url || currentPath.endsWith(url)) {
                        menuLinks.forEach(link => {
                            const linkText = link.querySelector('.menu-link-text')?.textContent?.trim();
                            if (linkText === menuName) {
                                link.classList.add('active');
                                menuFound = true;
                                console.log('‚úÖ Menu ativo (exato):', menuName);
                                return;
                            }
                        });
                        if (menuFound) break;
                    }
                }

                // Se n√£o encontrou correspond√™ncia exata, tentar por segmento
                if (!menuFound) {
                    const pathSegments = currentPath.split('/').filter(s => s.length > 0);
                    const mainSegment = pathSegments[0] || 'home';

                    console.log('üîç Tentando por segmento:', mainSegment);

                    const segmentMatches = {
                        'home': 'Dashboard',
                        'veiculos': 'Ve√≠culos',
                        'clientes': 'Clientes',
                        'vendedores': 'Vendedores',
                        'vendas': 'Vendas'
                    };

                    const targetMenu = segmentMatches[mainSegment] || segmentMatches['home'];

                    menuLinks.forEach(link => {
                        const linkText = link.querySelector('.menu-link-text')?.textContent?.trim();
                        if (linkText === targetMenu) {
                            link.classList.add('active');
                            menuFound = true;
                            console.log('‚úÖ Menu ativo (segmento):', targetMenu);
                        }
                    });
                }

                // Se ainda n√£o encontrou, verificar pelo href do link
                if (!menuFound) {
                    console.log('üîç Tentando por href dos links...');

                    menuLinks.forEach(link => {
                        const href = link.getAttribute('href')?.toLowerCase();
                        if (href) {
                            // Extrair a parte relevante do href
                            const hrefPath = href.split('/').pop() || '';
                            const currentSegment = currentPath.split('/').pop() || '';

                            if (hrefPath === currentSegment && currentSegment !== '') {
                                link.classList.add('active');
                                menuFound = true;
                                console.log('‚úÖ Menu ativo (href):', link.querySelector('.menu-link-text')?.textContent?.trim());
                            }
                        }
                    });
                }

                // Log final
                if (!menuFound) {
                    console.warn('‚ö†Ô∏è Nenhum menu correspondente encontrado para:', currentPath);
                }
            }

            // ===================================================================
            // CORRIGIR CLIQUES NOS MENUS
            // ===================================================================
            function setupMenuClicks() {
                const menuLinks = document.querySelectorAll('.sidebar .menu-link');

                menuLinks.forEach(link => {
                    link.addEventListener('click', function(e) {
                        // N√£o remover todos os active aqui - deixar para a pr√≥xima p√°gina
                        console.log('üñ±Ô∏è Menu clicado:', this.querySelector('.menu-link-text')?.textContent?.trim());

                        // Apenas adicionar uma classe tempor√°ria para feedback visual
                        this.classList.add('clicking');
                        setTimeout(() => {
                            this.classList.remove('clicking');
                        }, 150);
                    });
                });
            }

            // ===================================================================
            // REMOVER PSEUDO-ELEMENTOS PROBLEM√ÅTICOS
            // ===================================================================
            function removePseudoElements() {
                // Criar style para for√ßar remo√ß√£o
                let style = document.getElementById('pseudo-remover');
                if (!style) {
                    style = document.createElement('style');
                    style.id = 'pseudo-remover';
                    document.head.appendChild(style);
                }

                style.textContent = `
                    .sidebar.collapsed::after,
                    .sidebar.collapsed::before,
                    .sidebar::after,
                    .sidebar::before {
                        display: none !important;
                        content: none !important;
                        visibility: hidden !important;
                        opacity: 0 !important;
                        width: 0 !important;
                        height: 0 !important;
                    }

                    /* Estilo tempor√°rio para clique */
                    .menu-link.clicking {
                        background-color: rgba(245, 158, 11, 0.3) !important;
                    }
                `;
            }

            // ===================================================================
            // CORRIGIR ESPA√áAMENTO DA SIDEBAR
            // ===================================================================
            function fixSidebarSpacing() {
                const sidebar = document.getElementById('sidebar');
                const mainArea = document.querySelector('.main-area');

                if (!sidebar || !mainArea) return;

                function applySpacing() {
                    if (window.innerWidth <= 1024) {
                        // Mobile - sem margem
                        mainArea.style.marginLeft = '0px';
                        mainArea.style.width = '100vw';
                    } else {
                        // Desktop
                        const isCollapsed = sidebar.classList.contains('collapsed');
                        const marginLeft = isCollapsed ? '80px' : '280px';
                        const width = isCollapsed ? 'calc(100vw - 80px)' : 'calc(100vw - 280px)';

                        mainArea.style.marginLeft = marginLeft;
                        mainArea.style.width = width;

                        console.log('üìê Espa√ßamento aplicado:', { marginLeft, width, collapsed: isCollapsed });
                    }
                }

                // Aplicar imediatamente
                applySpacing();

                // Monitorar mudan√ßas na sidebar
                const observer = new MutationObserver(() => {
                    setTimeout(applySpacing, 50);
                });

                observer.observe(sidebar, {
                    attributes: true,
                    attributeFilter: ['class']
                });

                // Monitorar redimensionamento
                window.addEventListener('resize', () => {
                    setTimeout(applySpacing, 100);
                });
            }

            // ===================================================================
            // INICIALIZA√á√ÉO
            // ===================================================================
            function initialize() {
                console.log('üöÄ Iniciando corre√ß√£o do menu ativo...');

                // Remover elementos problem√°ticos primeiro
                removePseudoElements();

                // Aguardar um pouco para garantir que o DOM est√° pronto
                setTimeout(() => {
                    // Corrigir o menu ativo
                    setCorrectActiveMenu();

                    // Configurar cliques
                    setupMenuClicks();

                    // Corrigir espa√ßamento
                    fixSidebarSpacing();

                }, 100);

                // Re-aplicar ap√≥s carregamento completo
                window.addEventListener('load', () => {
                    setTimeout(() => {
                        setCorrectActiveMenu();
                        fixSidebarSpacing();
                    }, 200);
                });

                console.log('‚úÖ Sistema de menu ativo inicializado');
            }

            // ===================================================================
            // UTILIT√ÅRIOS DE DEBUG
            // ===================================================================
            window.debugMenu = function() {
                const currentPath = window.location.pathname;
                const activeMenus = document.querySelectorAll('.menu-link.active');

                console.log('=== DEBUG MENU ===');
                console.log('URL atual:', currentPath);
                console.log('Menus ativos encontrados:', activeMenus.length);

                activeMenus.forEach((menu, index) => {
                    const text = menu.querySelector('.menu-link-text')?.textContent?.trim();
                    console.log(`Menu ativo ${index + 1}:`, text);
                });
            };

            window.fixMenuManually = function() {
                removePseudoElements();
                setCorrectActiveMenu();
                fixSidebarSpacing();
            };

            // INICIALIZAR
            initialize();

